<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <title>{% block title %} Bienvenido a {{ app_name }} {% endblock %}</title>

    {% block stylesheets %}

        <link rel="stylesheet" href="{{ asset('/assets/vendor/bootstrap/dist/css/bootstrap.min.css') }}">
        <link rel="stylesheet" href="{{ asset('/assets/vendor/bootstrap/dist/css/bootstrap-theme.css') }}">
        <link rel="stylesheet" href="{{ asset('/assets/css/sticky_footer.css') }}">

    {% endblock %}
</head>

<body>

{% block nav %}
<!-- Fixed navbar -->
<nav class="navbar navbar-default navbar-fixed-top">
    <div class="container">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand" href="{{ url('mo_main_website_index') }}">{{ app_name }}</a>
        </div>
        <div id="navbar" class="collapse navbar-collapse">
            <ul class="nav navbar-nav">
                <li class="home"><a href="{{ url('mo_main_website_index') }}">{% trans %} mo.mainwebsite.section.home {% endtrans %}</a></li>
                <li class=""><a href="{{ url('mo_main_website_howto') }}">{% trans %} mo.mainwebsite.section.howworks {% endtrans %}</a></li>
                <li><a href="{{ url('mo_main_website_products') }}">{% trans %} mo.mainwebsite.section.products {% endtrans %}</a></li>
                <li><a href="{{ url('mo_user_register') }}">{% trans %} mo.mainwebsite.section.signup {% endtrans %}</a></li>
                <li><a href="{{ url('mo_main_website_contact') }}">{% trans %} mo.mainwebsite.section.contact {% endtrans %}</a></li>
                <li><a href="{{ url('mo_user_index') }}">{% trans %} mo.mainwebsite.section.login {% endtrans %}</a></li>
                <li class="dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">{% trans %}mo.mainwebsite.section.language{% endtrans %}<span class="caret"></span></a>
                    <ul class="dropdown-menu">
                        <li><a href="/en">{% trans %}mo.mainwebsite.section.language.english {% endtrans %}</a></li>
                        <li><a href="/es">{% trans %}mo.mainwebsite.section.language.spanish {% endtrans %}</a></li>
                    </ul>
                </li>

            </ul>
        </div><!--/.nav-collapse -->
    </div>
</nav>

{% endblock %}

{% block body %} {% endblock %}


{% block footer %}
<footer class="footer">
    <div class="container">
        <p class="text-muted">Cont√°ctenos !!! {{ app_email }}</p>
    </div>
</footer>

{% endblock %}

{% block javascript %}

    <script src="{{ asset('/assets/vendor/jquery/dist/jquery.min.js') }}"></script>
    <script src="{{ asset('/assets/vendor/bootstrap/dist/js/bootstrap.min.js') }}"></script>

{% endblock %}
</body>
</html>